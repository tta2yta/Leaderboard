{
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": ["airbnb-base"],
    "rules": {
      "no-shadow": "off",
      "no-param-reassign": "off",
      "eol-last": "off",
      "no-use-before-define": ["error", {"functions": false, "classes": true}],
      "max-len": ["error", { "code": 320 }],
      "class-methods-use-this":"off",
      "import/no-cycle":"off"
    },
    "ignorePatterns": [
      "dist/",
      "build/"
    ]
    
  }